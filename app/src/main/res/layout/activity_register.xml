<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authorization.RegisterActivity">

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-100dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="" />


    <EditText
        android:id="@+id/registerPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        android:maxLength="100"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/registerSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/registration"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/text_color"
        app:backgroundTint="@color/menu_back_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердили почту?"
            android:layout_weight="1"
            android:textSize="16dp"
            style="@style/Theme.MaterialComponents.DayNight.DarkActionBar.WhiteBlackText"/>

        <Button
            android:id="@+id/registerGoNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Далее"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/text_color"
            app:backgroundTint="@color/menu_back_1"/>
    </LinearLayout>



</FrameLayout>