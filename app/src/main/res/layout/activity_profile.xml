<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FE"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/profile_name"
            style="@style/Theme.MaterialComponents.DayNight.DarkActionBar.WhiteBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Вы вошли как: "
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/profile_change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="Сменить пароль"
            android:textColor="@color/text_color"
            app:backgroundTint="@color/menu_back_1" />

        <Button
            android:id="@+id/profile_admin_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:text="Ошибки от пользователей"
            android:textColor="@color/text_color"
            android:visibility="gone"
            app:backgroundTint="@color/menu_back_1" />

        <Button
            android:id="@+id/profile_admin_add_markers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:text="Заявки на добавление точек"
            android:textColor="@color/text_color"
            android:visibility="gone"
            app:backgroundTint="@color/menu_back_1" />

        <Button
            android:id="@+id/profile_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="Помощь"
            android:textColor="@color/text_color"
            app:backgroundTint="@color/menu_back_1" />

        <Button
            android:id="@+id/profile_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:text="Выйти"
            android:textColor="@color/text_color"
            app:backgroundTint="@color/menu_back_1" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/mainRelativeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/profileBottomNavigationMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/menu_bottom_background"
            app:elevation="0dp"
            app:itemIconSize="35dp"
            app:itemIconTint="@drawable/menu_item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_menu" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>